/* ──────────────────────────────────────────────────────────────────
 * ── BASE
 * ─────────────────────────────────────────────────────────────── */

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body, html {
    padding: 0;
    border: 0;
    vertical-align: baseline;
    width: 100%;
    overflow-x: hidden;
}

html {
    font-size: font-size;

    &.is-modal-active {
        overflow: hidden;
    }
}

body {
    font-family: font-base;
    color: color-main;
    font-weight: normal;
    background-color: #fff;
    line-height: normal;
    display: flex;

    &.is-modal-active {

        .main {
            &:before {
                pseudo();
                background-color: rgba(0, 0, 0, 0.42);
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 1;
                z-index: 5;
                visibility: visible;
            }
        }
    }

    // &.loading {
    //     overflow: hidden;

    //     .wrapper {
    //         display: none;
    //     }

    //     .preloader {
    //         z-index: 100;
    //     }
    // }

}

.preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    display: none;
}

.browsehappy {
    display: block;
    margin: 0;
    padding: 30px;
    text-align: center;
    background: color-error;
    color: #fff;
    font-size: 18px;
    line-height: 1.4;

    a,
    a:hover {
        color: #fff;
        text-decoration: underline;
    }
}


/*
 * ─── FOOTER TO BOTTOM ───────────────────────────────────────────────────────────
*/
.wrapper {
    flex: 1 1 auto;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-flow: column nowrap;
}

.main {
    flex: 1 1 auto;
    position: relative;
    background-color: #f7f8fc;

    &:before {
        pseudo();
        background-color: rgba(0, 0, 0, 0.42);
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        visibility: hidden;
        transition: all 0.25s linear;
    }
}

.header, .footer {
    flex-shrink: 0;
}


/*
 * ─── ELEMENTS ───────────────────────────────────────────────────────────
*/

a {
    color: inherit;
    text-decoration none;
}

a, button, input, textarea, select {
    outline: none;
    border: 0;
    font-family: inherit;
    transit();

    &:focus {
        outline: none;
    }
}

ul, li {
    margin: 0;
    padding: 0;
    list-style-type: none;
}

button {
    display: inline-block;
    background: none;
}

button, button[type="submit"], input[type="submit"] {
    cursor: pointer;
}

input, textarea {
    display: block;
    width: 100%;
    line-height: 1;
    background: none;
    padding: 0;
}

input[type="search"] {
    border-radius: 0;
    -webkit-appearance: none;

    &::webkit-search-decoration {
        -webkit-appearance: none;
    }
}

textarea {
    resize: none;
}

fieldset {
    border: 0;
    margin: 0;
    padding: 0;
}

h1, h2, h3, h4 {
    margin: 0;
    padding: 0;
    font-weight: inherit;
}

.iframe {
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 35px;
    height: 0;
    overflow: hidden;

    iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
}

.tab-container {
    display: none;
    opacity: 0;
    @include transit();
    animation: fadein 0.25s linear 1 forwards;

    &.active {
        display: block;
        opacity: 1;
    }
}

@keyframes fadein {
    // animation: fadein 0.25s linear 1 forwards;
    0% { opacity: 0; }
    100% { opacity: 1; }
}
@keyframes rotate {
    0% { transform: rotate(0); }
    100% { transform: rotate(360deg); }
}

.fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
}

.table {
    overflow-x: auto;
}

.hidden {
    visibility: hidden;
    opacity: 0;
    z-index: -1;
}