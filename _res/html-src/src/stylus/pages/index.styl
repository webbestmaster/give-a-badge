.cardCategoryCreator {
    display flex
    align-items center
    font-size: 14px;

    &-image {
        flex: none;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        position relative

        img {
            width: 105%;
            height: 105%;
            position absolute
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%)
        }
    }

    &-data {
        flex-grow: 1;
        padding-left: 10px;
    }

    &-name {
        margin-bottom: 10px;
    }

    &-date {
        font-size: 14px;
        color: color-light;
    }

    &--big {
        font-size: 16px;
    }

    &--big &-data {
        padding-left: 20px;
    }

    &--big &-image {
        width: 50px;
        height: 50px;
    }
