.cardsContainer {
    background-color: #f7f8fc;
    padding: 50px 0 40px;
}

.cardsCategories {
    display flex
    flex-wrap wrap
    margin 0 -15px;

    &.is-loaded {
        animation: slideInUp 0.3s linear 1 forwards;
    }

    &-item {
        flex: none;
        width: (100%/4);
        padding: 0 15px;
        margin-bottom: 40px;
        @media lg {
            width: (100%/3);
        }
        @media md {
            width: 50%;
            margin-bottom: 20px;
        }
        @media sm {
            width: 100%;
        }
    }
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translate3d(0, 5%, 0);
    }
    to {
        opacity: 1;
        transform: translate3d(0, 0, 0);
    }
}

.cardCategory {
    display block
    background-color: #fff;
    padding: 30px 15px 15px;
    box-shadow: 0 2px 40px 0 rgba(0, 0, 0, 0.05);

    &-circle {
        margin: 0 auto 30px;
    }

    &-users {
        padding-bottom: 10px;
        border-bottom 1px solid #f1f5fa;
    }

    &-desc {
        font-size: 14px;
        line-height: (20/14);
        margin: 15px 0 20px;
        textOverflow(3);
        height: 60px;
    }
}

.categoryCircle  {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display flex
    align-items center
    justify-content center
    position relative
    @media md {
        width: 127px;
        height: 127px;
    }

    &-icon {
        display flex
        align-items center
        justify-content center

        & > .icon {
            width: 40px;
            height: 40px;
            fill: #fff;
            @media md {
                width: 50px;
                height: 50px;
            }
        }
    }

    &-iconStatus {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display block
        position absolute
        bottom: 0;
        right: 0;

        .icon {
            fill: #fff;
            display block
            position absolute
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }

        &.is-check {
            background-color: #72d40e;
        }

        &.is-clock {
            background-color: #d8d8d8;
        }

        &.is-closed {
            background-color: #d0021b;
        }
    }
}

.userPic {
    display block
    width: 47px;
    height: 47px;
    border-radius: 50%;
    position relative
    overflow hidden;

    img {
        width: 105%;
        height: 105%;
        position absolute
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%)
    }

    &--bordered {
        width: 50px;
        height: 50px;
        border: 3px solid #fff;
    }

    &--ctrl {
        position relative
        cursor pointer

        &:before {
            pseudo();
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.58);
            z-index: 1;
            opacity: 0;
            visibility: hidden;
            transit();
        }

        .icon {
            display block
            width: 15px;
            height: 15px;
            fill: #fff;
            position absolute
            top: 50%;
            left: 50%;
            margin-left: -7.5px;
            margin-top: -7.5px;
            z-index: 2;
            opacity: 0;
            visibility: hidden;
            transit();
        }

        &:hover {

            &:before, .icon {
                opacity: 1;
                visibility: visible;
            }
        }
    }
}


