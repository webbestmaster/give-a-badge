.modal {
    background: none;
    position fixed
    bottom: 0;
    right: 0;
    top: 100px;
    width: 100%;
    max-width: 1026px;
    display flex
    flex-direction column
    transform: translateX(100%)
    z-index: 100;
    transition: all 0.6s linear;
    @media lg {
        max-width 100%;
    }

    &--thin {
        max-width: 565px;
        @media sm {
            max-width 100%;
        }
    }

    &.is-active {
        transform: translateX(0);
    }

    &.is-active &-close {
        transform: translateY(0);
    }

    &-close {
        display block
        width: 32px;
        height: 32px;
        background-color: #fff;
        box-shadow: 0 2px 20px 0 rgba(0, 0, 0, 0.2);
        border-radius: 50%;
        position absolute
        right: 30px;
        top: -16px;
        transform: translateY(-16px);
        z-index: 5;
        transition: all 0.3s ease-in-out 0.5s;
        @media sm {
            right: 20px;
        }

        .icon {
            display block
            fill: #d0021b;
            position absolute
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%)
        }
    }

    &-body {
        background-color: #fff;
        overflow hidden
        border-radius: 5px 0 0 0;
        height: 100%;
        // padding: 25px 10px 25px 30px;
        padding: 0 0 0 30px;
        position absolute;
        z-index: 1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display flex
        flex-direction column
        transit();
        @media md {
            padding: 0 20px;
        }
        @media sm {
            padding: 0 0 0 18px;
        }

        &--thin {
            padding: 0;
        }
    }

    &-title {
        font-family: font-gilroy;
        font-size: 30px;
        font-weight bold
        margin-bottom: 20px;
        @media sm {
            // margin-bottom: 30px;
            margin-bottom: 10px;
        }
    }

    &-titleLink {
        display inline-block;
        margin-left: 20px;
        color: color-blue;
        font-size: 20px;
        @media sm {
            display block
            margin-left: 0;
            margin-top: 15px;
        }

        &:hover {
            color: darken(color-blue, 5%);
        }
    }

    &-scroll {
        border-radius: 5px 0 0 0;
        flex-grow: 1;
        overflow: hidden;
        overflow-y: auto;
        position relative;
        // padding: 25px 15px 0 0;
        padding: 25px 15px 25px 0;
        // @media sm {
        //     padding-top: 20px;
        // }

        &--thin {
            padding: 0;
        }

        &.ps--active-y {
            padding-right: 15px;
        }

        &--thin.ps--active-y {
            padding-right: 6px;
        }
    }
}


.categoriesList {

    &-row {
        &:not(:last-child) {
            margin-bottom: 5px;
        }
    }

    &-title {
        font-family: font-gilroy;
        font-size: 20px;
        font-weight bold;
        margin-bottom: 30px;
        @media md {
            font-size: 25px;
            margin-bottom: 35px;
        }
    }

    &-body {
        display flex;
        flex-wrap wrap;
        margin: 0 -15px;
        @media xs {
            margin: 0 -10px;
        }
    }

    &-item {
        padding: 0 15px;
        margin-bottom: 30px;
        @media xs {
            flex: none;
            width: 50%;
            padding: 0 10px;
        }
    }
}


.categoryPeople {
    position relative

    .categoryCircle {
        position absolute
        top: 0;
        left: 0;
    }

    &-cnt {
        padding-left: 135px;
        line-height: (24/16);
        margin-bottom: 40px;
        @media sm {
            padding-left: 0;
            margin-bottom: 50px;
        }

        p + p {
            margin-top: 10px;
        }
    }

    &-title {
        font-size: 20px;
        font-family: font-gilroy;
        font-weight bold;
        margin-bottom: 10px;
        @media sm {
            min-height: 127px;
            padding-left: 150px;
            font-size: 25px;
            display flex
            align-items center
            margin-bottom: 30px;
        }
    }

    &-txt {
        @media sm {
            textOverflow(5);
            height: 120px;
        }

        &.is-expanded {
            height: auto;
            display block;
        }
    }

    &-morectrl {
        display none
        margin-top: 15px;
        color: color-blue;
        font-weight bold
        @media sm {
            display inline-block
        }
    }

    &-note {
        margin-top: 20px;
        @media sm {
            margin-top: 30px;
        }
    }
}


.peopleSearch {
    padding-left: 135px;
    @media sm {
        padding-left: 0;
    }

    &-control {
        margin-bottom: 30px;
        position relative

        input {
            display block;
            width: 100%;
            height: 40px;
            padding: 5px 16px;
            border: 1px solid #d8d8d8;
            border-radius: 5px;
            box-shadow: 0 2px 1px 0 rgba(0, 0, 0, 0.05);

            &::placeholder {
                color: rgba(color-main, 0.52);
            }
        }
    }

    &-select {
        display none
        position absolute
        top: 100%;
        left: 0;
        width: 100%;
        z-index: 2;
        margin-top: 20px;
        &.is-active {
            display block
        }
    }

    &-list {
        margin-bottom: 50px;
        @media sm {
            margin-bottom: 30px;
        }
    }

    &-msg {
        margin-bottom: 20px;

        textarea {
            display block;
            height: 180px;
            width: 100%;
            border: 1px solid #d8d8d8;
            box-shadow: 0 2px 1px 0 rgba(0, 0, 0, 0.05);
            border-radius: 5px;
            padding: 16px;

            &::placeholder {
                color: rgba(color-main, 0.52);
            }
        }
    }

    &-btn {
        button {
            display block;
            margin-left: auto;
            text-transform: uppercase;
            background-color: color-blue;
            color: #fff;
            height: 40px;
            border-radius: 5px;
            width: 200px;
            text-align center;
            font-family: font-gilroy;
            overflow: hidden;
            font-weight bold;
            @media sm {
                width: 100%;
            }

            &:hover {
                background-color: darken(color-blue, 10%);
            }

            &.is-process {
                position relative

                &:before {
                    pseudo();
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: color-blue;
                    z-index: 1
                }

                &:after {
                    pseudo();
                    width: 20px;
                    height: 20px;
                    border-radius: 50%;
                    border-color: #fff rgba(255,255,255,0) rgba(255,255,255,0) rgba(255,255,255,0);
                    border-width: 3px;
                    border-style: solid;
                    top: 50%;
                    left: 50%;
                    margin-left: -10px;
                    margin-top: -10px;
                    z-index: 2;
                    animation: rotate 1s ease-in-out infinite forwards;
                }
            }
        }
    }
}

.peopleSearchSelect {
    border-radius: 5px;
    box-shadow: 0 2px 1px 0 rgba(0, 0, 0, 0.05);
    background-color: #ffffff;
    border: solid 1px #f1f5fa;
    max-height: 231px;
    overflow: hidden;
    overflow-y: auto;
    @media sm {
        max-height: 171px;
    }

    &-item {
        display none
    }
}

.peopleSearchSelectItem {
    display flex
    align-items center
    padding: 15px 20px;
    cursor pointer
    @media sm {
        padding: 5px 15px;
    }

    &:hover {
        background-color: #f6f9fd;
    }

    &-img {
        margin-right: 15px;
    }
}


.categoryCard {

    &-top {
        height: auto;
        background-color: #fbcb60;
        position relative;
        transit();

        &.is-active {
            padding-bottom: 50px;
        }
    }

    &-topFooter {
        display flex
        align-items center
        justify-content center
        position absolute
        bottom: 0;
        left: 0;
        width: 100%;
        background-image: linear-gradient(to top, #fbcb60 0%, rgba(255,255,255,0) 100% );
    }

    &-title {
        display flex
        align-items center
        justify-content center
        color: #fff;
        font-family: font-gilroy;
        font-size: 30px;
        font-weight bold
        padding: 30px 15px 40px;
        @media sm {
            font-size: 25px;
        }

        .icon {
            fill: #fff;
            width: 35px;
            height: 35px;
            margin-right: 25px;
        }
    }

    &-body {
        padding: 35px 20px;
        @media sm {
            padding: 30px 20px;
        }
    }

    &-cnt {
        margin-bottom: 35px;
        line-height: (24/16);
    }

    &-users {
        padding: 0 20px;
        position relative
        @media sm {
            padding: 0 15px;
        }

        &.is-active {
            max-height: 500px;
        }

        .categoryUserList {
            ul {
                li {
                    margin-bottom: 13px;
                }
            }
        }
    }

    &-list {
        max-height: 312px;
        position relative
        overflow hidden;

        &.is-active {
            padding-bottom: 50px;
        }
    }
}

.categoryCardExpander {
    display flex
    align-items center
    justify-content center
    background-image: linear-gradient(to top, #fbcb60 0%, rgba(251, 203, 96, 0) 100% );
    position absolute
    bottom: 0;
    left: 0;
    width: 100%;
    color: #fff;
    font-weight bold;
    height: 90px;

    &.is-active {
        height: 50px;
    }

    &-opened {
        display none;
    }

    .icon {
        fill: #fff;
        margin-left: 10px;
        transform: rotateX(180deg);
    }

    &.is-active .icon {
        transform: rotateX(0);
    }

    &.is-active &-opened {
        display block
    }

    &.is-active &-closed {
        display none
    }
}